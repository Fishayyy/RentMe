<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical">

    <ImageView
        android:id = "@+id/contact_image"
        android:layout_height = "270dp"
        android:layout_width = "385dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:scaleType = "centerCrop">
    </ImageView>

    <TextView
        android:id = "@+id/attribute_owner"
        style = "@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "top"
        android:layout_below = "@id/contact_image"
        android:layout_marginTop = "4dp"
        android:layout_marginStart = "15dp"
        android:textSize = "20sp"
        android:text = "@string/owner">
    </TextView>

    <TextView
        android:id = "@+id/attribute_owner_email"
        style = "@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "top"
        android:layout_below = "@id/attribute_owner"
        android:layout_marginTop = "4dp"
        android:layout_marginStart = "15dp"
        android:textSize = "20sp"
        android:autoLink = "email"
        android:textColorLink = "@color/colorPrimary"
        android:text = "@string/ownerEmail">
    </TextView>

    <TextView
        android:id = "@+id/attribute_owner_phone"
        style = "@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "top"
        android:layout_below = "@id/attribute_owner_email"
        android:layout_marginTop = "4dp"
        android:layout_marginStart = "15dp"
        android:textSize = "20sp"
        android:autoLink = "phone"
        android:textColorLink = "@color/colorPrimary"
        android:text = "@string/ownerPhoneNum">
    </TextView>

</RelativeLayout>